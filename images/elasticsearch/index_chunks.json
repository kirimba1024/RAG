{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "refresh_interval": "30s",
    "analysis": {
      "normalizer": {
        "lower_ascii": {
          "type": "custom",
          "filter": ["lowercase", "asciifolding"]
        }
      },
      "filter": {
        "russian_stop": {
          "type": "stop",
          "stopwords": "_russian_"
        },
        "russian_stemmer": {
          "type": "snowball",
          "language": "russian"
        },
        "wdg": {
          "type": "word_delimiter_graph",
          "preserve_original": true,
          "split_on_case_change": true,
          "split_on_numerics": true,
          "generate_word_parts": true,
          "generate_number_parts": true
        }
      },
      "analyzer": {
        "code_friendly": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "wdg"]
        },
        "ru_text": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "russian_stop", "russian_stemmer"]
        },
        "en_text": { "type": "english" }
      }
    }
  },
  "mappings": {
    "dynamic": "strict",
    "properties": {
      "path":        { "type": "keyword" },
      "hash":        { "type": "keyword", "normalizer": "lower_ascii" },
      "text":        { "type": "text", "analyzer": "code_friendly", "fields": { "ru": { "type": "text", "analyzer": "ru_text" }, "en": { "type": "text", "analyzer": "en_text" } } },
      "embedding":   { "type": "dense_vector", "dims": 1024, "index": true, "similarity": "cosine", "index_options": { "type": "hnsw", "m": 32, "ef_construction": 256 } },
      "chunk_id":    { "type": "integer" },
      "chunks":      { "type": "integer" },
      "start_line":  { "type": "integer" },
      "end_line":    { "type": "integer" },
      "kind":        { "type": "keyword", "normalizer": "lower_ascii" },
      "lang":        { "type": "keyword", "normalizer": "lower_ascii" },
      "size":        { "type": "long" },
      "lines":       { "type": "integer" },
      "extension":   { "type": "keyword", "normalizer": "lower_ascii" },
      "filename":    { "type": "keyword", "normalizer": "lower_ascii" },
      "mime":        { "type": "keyword", "normalizer": "lower_ascii" },
      "created_at":  { "type": "date" },
      "updated_at":  { "type": "date" },
      "llm_version": { "type": "keyword", "normalizer": "lower_ascii" },


      "name":        { "type": "keyword", "normalizer": "lower_ascii" },
      "title":       { "type": "keyword", "normalizer": "lower_ascii" },
      "description": { "type": "keyword", "normalizer": "lower_ascii" },
      "summary":     { "type": "text",    "analyzer": "code_friendly" },
      "detailed":    { "type": "text",    "analyzer": "code_friendly" },
      "language":    { "type": "keyword", "normalizer": "lower_ascii" },
      "purpose":     { "type": "text",    "analyzer": "code_friendly" },
      "file_type":   { "type": "keyword", "normalizer": "lower_ascii" },
      "notes":       { "type": "text",    "analyzer": "code_friendly" },
      "conclusions": { "type": "text",    "analyzer": "code_friendly" },
      "open_questions": { "type": "text", "analyzer": "code_friendly" },
      "highlights":  { "type": "text",    "analyzer": "code_friendly" },
      "has_documentation": { "type": "boolean" },
      "layer":       { "type": "keyword", "normalizer": "lower_ascii" },
      "complexity":  { "type": "double" },
      "confidence": { "type": "double" },
      "improvements": { "type": "text",   "analyzer": "code_friendly" },
      "bugs":        { "type": "text",    "analyzer": "code_friendly" },
      "vulnerabilities": { "type": "text", "analyzer": "code_friendly" },


      "symbols":     { "type": "keyword", "normalizer": "lower_ascii" },
      "paths":       { "type": "keyword", "normalizer": "lower_ascii" },
      "keys":        { "type": "keyword", "normalizer": "lower_ascii" },
      "api_endpoints": { "type": "keyword", "normalizer": "lower_ascii" },
      "db_entities": { "type": "keyword", "normalizer": "lower_ascii" },
      "dependencies": { "type": "keyword", "normalizer": "lower_ascii" },
      "events_queues": { "type": "keyword", "normalizer": "lower_ascii" },
      "idents":      { "type": "keyword", "normalizer": "lower_ascii" },
      "headers_auth_scopes": { "type": "keyword", "normalizer": "lower_ascii" },
      "errors_codes": { "type": "keyword", "normalizer": "lower_ascii" },
      "imports":     { "type": "keyword", "normalizer": "lower_ascii" },
      "functions":   { "type": "keyword", "normalizer": "lower_ascii" },
      "classes":     { "type": "keyword", "normalizer": "lower_ascii" },
      "variables":   { "type": "keyword", "normalizer": "lower_ascii" },


      "feature_flags": { "type": "keyword", "normalizer": "lower_ascii" },
      "secrets":      { "type": "keyword", "normalizer": "lower_ascii" },
      "permissions":  { "type": "keyword", "normalizer": "lower_ascii" },
      "roles":        { "type": "keyword", "normalizer": "lower_ascii" },
      "config_keys":  { "type": "keyword", "normalizer": "lower_ascii" },
      "dtos":         { "type": "keyword", "normalizer": "lower_ascii" },
      "entities":     { "type": "keyword", "normalizer": "lower_ascii" },
      "domain_objects": { "type": "keyword", "normalizer": "lower_ascii" },
      "bm25_boost_terms": { "type": "keyword", "normalizer": "lower_ascii" },
      "io":           { "type": "keyword", "normalizer": "lower_ascii" },
      "tags":         { "type": "keyword", "normalizer": "lower_ascii" },
      "key_points":   { "type": "keyword", "normalizer": "lower_ascii" },
      "security_flags": { "type": "keyword", "normalizer": "lower_ascii" },
      "todos":        { "type": "keyword", "normalizer": "lower_ascii" },


      "graph_questions": { "type": "keyword", "normalizer": "lower_ascii" },
      "graph_answers": { "type": "keyword", "normalizer": "lower_ascii" },

      
      "links":       { "type": "object", "enabled": false }
    }
  }
}


